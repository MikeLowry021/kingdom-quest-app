{
  "$id": "https://kingdomquest.example/schemas/FamilyAltar.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A family devotion session in the KingdomQuest app",
  "properties": {
    "activityInstructions": {
      "description": "Instructions for family activity",
      "type": "string"
    },
    "ageRating": {
      "description": "Target age group for the family altar",
      "enum": [
        "all",
        "children",
        "youth",
        "adult"
      ],
      "type": "string"
    },
    "bibleReference": {
      "properties": {
        "book": {
          "description": "Bible book name",
          "type": "string"
        },
        "chapter": {
          "description": "Chapter number",
          "type": "integer"
        },
        "translation": {
          "default": "NIV",
          "description": "Bible translation used",
          "type": "string"
        },
        "verses": {
          "description": "Verse range (e.g., '1-10')",
          "type": "string"
        }
      },
      "required": [
        "book",
        "chapter",
        "verses"
      ],
      "type": "object"
    },
    "createdAt": {
      "description": "Creation timestamp",
      "format": "date-time",
      "type": "string"
    },
    "discussionQuestions": {
      "description": "Discussion questions for family conversation",
      "items": {
        "properties": {
          "ageGroup": {
            "description": "Target age group for this question",
            "enum": [
              "all",
              "children",
              "youth",
              "adult"
            ],
            "type": "string"
          },
          "question": {
            "description": "Discussion question text",
            "type": "string"
          }
        },
        "required": [
          "question"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "duration": {
      "description": "Estimated duration in minutes",
      "type": "integer"
    },
    "id": {
      "description": "Unique identifier for the family altar",
      "type": "string"
    },
    "mediaItems": {
      "description": "Media items for the family altar",
      "items": {
        "$ref": "Media.schema.json"
      },
      "type": "array"
    },
    "prayer": {
      "$ref": "Prayer.schema.json",
      "description": "Associated prayer"
    },
    "scripture": {
      "description": "Scripture text for reading",
      "type": "string"
    },
    "summary": {
      "description": "Brief summary of the devotion",
      "type": "string"
    },
    "tags": {
      "description": "Topical tags for categorizing the family altar",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "title": {
      "description": "Title of the family altar",
      "type": "string"
    },
    "updatedAt": {
      "description": "Last update timestamp",
      "format": "date-time",
      "type": "string"
    }
  },
  "required": [
    "id",
    "title",
    "bibleReference",
    "scripture",
    "discussionQuestions",
    "createdAt",
    "updatedAt"
  ],
  "title": "FamilyAltar",
  "type": "object",
  "version": "1.0.0"
}